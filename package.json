  },
  "homepage": "https://github.com/epiijs/client#readme",
  "devDependencies": {
    "@epiijs/eslint-config": "^0.1.4",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.41",
    "@types/react-dom": "^18.2.17",
    "eslint": "^8.50.0"
  },
  "dependencies": {
    "@epiijs/config": "^0.4.2",
